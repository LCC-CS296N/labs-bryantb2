@{
    ViewData["Title"] = "My Blog Sign In";
}
@model LoginViewModel;
<section>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.2.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>

    <h1 class="universalPageTitleStyle mt-5 replyTitleCustomSpacing">Sign In to Proceed to Your Profile</h1>
    <div class="row mb-5 ml-2">
        <div class="col-4 p-4 customBorder">
            <article class="text-dark mb-2">
                <form class="inputFieldText well form-horizontal" asp-controller="MyBlog" asp-action="SignInRedirect" method="get" id="signIn_form">
                    <fieldset>
                        <legend class="formHeaderText mb-1">Sign In</legend>
                        @{
                            if (ViewBag.ErrorMessage != null)
                            {
                                <h2 class="text-danger mb-1">@ViewBag.ErrorMessage</h2>
                            }
                        }
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <label asp-for="Email" class=" control-label text-dark">Email</label>
                            <div><span asp-validation-for="Email" style="color:red"> </span></div>
                            <div class="inputGroupContainer">
                                <div class="input-group">
                                    <input asp-for="Email" placeholder="Email@abc.com" class="form-control" type="text">
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Password" class=" control-label text-dark">Password</label>
                            <div><span asp-validation-for="Password" style="color:red"> </span></div>
                            <div class="inputGroupContainer">
                                <div class="input-group">
                                    <input asp-for="Password" placeholder="Password" class="form-control" type="password">
                                </div>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-dark text-light customReplyButtonStyle">Sign In</button>
                    </fieldset>
                </form>
            </article>
            <a asp-controller="MyBlog" asp-action="SignUp" class="" role="button" aria-pressed="true">Or Sign Up</a>
        </div>
    </div>
</section>
